generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Provedor é SQLite
  url      = env("DATABASE_URL") // Lê a string de conexão do arquivo .env
}


// schema de usuários e posts copiados do notion
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  posts Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String
  author   User    @relation(fields: [authorId], references: [id])
  authorId Int
}
